{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Resources/subscriptions/resourceGroups"
        },
        {
          "not": {
            "field": "tags.Environment",
            "equals": "Production"
          }
        },
        {
          "field": "tags.CreationDate",
          "exists": "false"
        }
      ]
    },
    "then": {
      "effect": "append",
      "details": [
        {
          "field": "tags.CreationDate",
          "value": "[take(utcNow(),10)]"
        },
        {
          "field": "tags.ExpirationDate",
          "value": "[addDays(utcNow(),15)]"
        }
      ]
    }
  },
  "parameters": {}
}
